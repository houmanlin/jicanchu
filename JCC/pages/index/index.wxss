/* 动画 */

.animation{
  transform: rotateX(180deg);
}


/* index */
.header{
  width: 100%;
  height: 80rpx;
  background: white;
  display: flex;
  align-items: center;
  position: fixed;
  top: 160rpx;
  left: 0;
  z-index: 2;
  border-bottom: 5px solid #dddddd
}
.headeritem{
  width: auto;
  height: auto;
  display: inline-block;
  justify-content: center;
  color: #bdbdbd;
  font-size:30rpx;
  align-items: center;
  padding: 15rpx 20rpx;
  border-bottom: 3px solid #fff;
  margin-top:3px 
}
.selected{
  border-bottom: 3px solid red;
  color: red
}
.headeritem image{
  width: 30rpx;
  height: 30rpx;
  padding-left:10rpx 
}

/* 订单列表 */
.orderList{
  font-size:40rpx;
  
}
.orderItem{
  border-bottom: 5px solid #dddddd;
  padding-top: 10rpx;
