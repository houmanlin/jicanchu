/* 获取人员信息 */

.getuser{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center
}

/* 公共样式 */
.Button{
  background: red;
  color: white;
  width: 80%;
  height: auto;
  font-size: 30rpx
}
.bg-color-gray{
  background: #dddddd;
}
.padd-tb-10{
  padding-bottom: 20rpx;
  padding-top: 20rpx
}
/* 购买人信息 */
.Delivery{
  width: 100%;
  height: auto;
  justify-content: left;
  position: relative;
  font-size: 30rpx;
  border-bottom: 1px solid #dddddd;
  padding-bottom: 20rpx
}
.Delivery view{
  padding-top:10rpx
}
.addInfo{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  bottom: 20rpx;
  right: 30rpx;
  align-items: flex-end;
  display: flex;
  justify-content: center
  }
.addInfo image{
  width: 45rpx;
  height: 45rpx
}
.address{
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.yuan{
  font-size: 23rpx;
  color: red
}
radio{
  display: block;
  padding-bottom:20rpx 
}
/* 填写信息 */
.Info{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0,0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  z-index: 999
}
.form-input{
  width: 90%;
  height: auto;
  padding-top:40rpx;
  padding-bottom:40rpx;
  text-align: center;
  background: #fff;
  z-index: 9999
}
.clear{
  width: 100rpx;
  height: 130rpx;
  text-align: center;
  line-height: 130rpx;
  color: #ffffff;
  position: relative;
  z-index: 99999
}
.form-Info{
  width: 96%;
  height: auto;
  display: flex;
  justify-content: space-between;
  padding-top:20rpx ;
  margin: 0 auto;
  flex-wrap: wrap;
  z-index: 99999
}
.form-input input{
  width: 75%;
  margin-left: 20rpx;
  border: 1px solid #dddddd;
  border-radius: 20rpx;
  padding-left: 10rpx
}
.form-input button{
  font-size:30rpx;
  width: 40%;
}
/* 获取物品信息按钮 */
.getShopInfo{

  bottom: 30rpx;
  left: 40%;
  margin-left:-30% ;
  background: red;
  color: #fff;
  width: 80%;
  height: 100rpx;

  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 45rpx
}
.getShopInfo image{
  width: 50rpx;
  height: 50rpx;
  margin-right:20rpx 
}
.shopnames{
  width: 60%;
  height: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap
}
.Draft{
  background: #ffbe42
}
.lingshou{
  width: 100%;
  height: auto;
  display: flex;
  align-items: center
}
.shopMoney{
  line-height: 0rpx
}
.search{
  border: 1px solid #bdbcbc;
  border-radius: 100rpx;
  padding: 10rpx 0;
  position: relative;
}
.selectInfo{
  position: absolute;
  bottom: -300px;
  height: 300px;
  width: 100%;
  border-radius:20rpx;
  overflow: hidden;
  border:1px solid #dddddd;
  background: #ffffff;

  z-index: 99;

}
.Phoneitem{
  width:94%;
  height: auto;
  display: flex;
  margin: 0 auto;
  border-bottom: 1px solid #ddd;
}

.UserInfo, .userUP{
  display: flex;
  width: 100%;
  height: auto;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx
}
.select{
  display: flex;
  align-items: center
}
.down{
  margin-left: 20rpx
}
.border{
  width: 100%;
  height: 1px;
  background: #bdbcbc;
  margin: 10rpx auto;
}
.UserInfo image{
  width: 50rpx;
  height: 50rpx
}
.selecthosework{
  width: 100%;
  height: 200px;
  position: absolute;
  bottom: -200px;
  z-index: 999;
  border:1px solid #dddddd;
  border-radius: 10rpx;
  background: #fff
}
/* 商品列表 */
.OrderList{
  width: 100%;
  margin-bottom: 100rpx
}
.orderitem:nth-child(1){
  border-top: 1px solid #dddddd!important
}
.orderitem{
  width: 100%;
  height: auto;
  padding-top:10rpx;
  padding-bottom: 10rpx;
  border-bottom:1px solid #dddddd;  
  display: flex;
  font-size: 30rpx;
  position: relative
}
.shoppInfo view{
  padding-top:5rpx;
  padding-bottom:5rpx;
}
.orderitem image{
  width: 150rpx;
  height: 150rpx;
  
}
.shopbrand{
  font-size: 24rpx;
  color: #dddddd  
}
.shopMoney{
  font-size:24rpx;
  color: red 
}
.sub{
  width: auto;
  height: auto;
  display: flex;
  position: absolute;
  right: 0;
  bottom: 20rpx;
  border:1px solid #dddddd
}
.sub input{
  width: 70rpx;
  height: 60rpx;
  border-left: 1px solid #dddddd;
  border-right: 1px solid #dddddd;
  text-align: center
}
.selectItem{
  width: 96%;
  border-bottom:1px solid #dddddd;
  height: auto;
  padding-top: 20rpx;
  padding-bottom: 20rpx ;
  margin: 0 auto;
  text-align: center
}
.Phoneitem{
  width: 90%;
  height: auto;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  border-bottom: 1px solid #dddddd;
  display: flex;
  justify-content: space-between
}
.count{
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx
}

/* 提交订单 */

.submit{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: red;
  display: flex;
  justify-content: left;
  align-items: center;
  border-top: 1px solid #dddddd;
  z-index: 2
}
.jiage{
  width:100%;
  height: 100rpx;
  background: white
}
.submit button{
  width: 60%;
  border: none;
  height: 100rpx;
  line-height: 100rpx
}
.jiageItem{
  padding-left:20rpx;
  font-size:30rpx;
  padding-top:10rpx   
}
.zongjia text{
  color: red;
  font-weight:900 
}