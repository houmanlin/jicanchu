/* 公共样式 */
.Button{
  background: red;
  color: white;
  width: 80%;
  height: auto
}

/* 购买人信息 */
.Delivery{
  width: 100%;
  height: auto;
  justify-content: left;
  position: relative;
  font-size: 30rpx;
  border-bottom: 1px solid #dddddd;
  padding-bottom: 20rpx
}
.Delivery view{
  padding-top:10rpx
}
.addInfo{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  bottom: 20rpx;
  right: 30rpx;
  align-items: flex-end;
  display: flex;
  justify-content: center
  }
.addInfo image{
  width: 45rpx;
  height: 45rpx
}
.address{
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.yuan{
  font-size: 23rpx;
  color: red
}
radio{
  display: block;
  padding-bottom:20rpx 
}
/* 填写信息 */
.Info{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0,0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap
}
.form-input{
  width: 90%;
  height: auto;
  padding-top:40rpx;
  padding-bottom:40rpx;
  text-align: center;
  background: #fff;
}
.form-Info{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: center;
  padding-top:20rpx 
}
.form-input input{
  width: auto;
  margin-left: 20rpx;
  border: 1px solid #dddddd;
  border-radius: 20rpx;
  padding-left: 10rpx
}
.form-input button{
  font-size:30rpx;
  width: 40%;
}
/* 获取物品信息按钮 */
.getShopInfo{

  bottom: 30rpx;
  left: 40%;
  margin-left:-30% ;
  background: red;
  color: #fff;
  width: 80%;
  height: 100rpx;
  z-index: 2
}


/* 商品列表 */
.OrderList{
  width: 100%;
  margin-bottom: 100rpx
}
.orderitem:nth-child(1){
  border-top: 1px solid #dddddd!important
}
.orderitem{
  width: 100%;
  height: auto;
  padding-top:10rpx;
  padding-bottom: 10rpx;
  border-bottom:1px solid #dddddd;  
  display: flex;
  font-size: 30rpx;
  position: relative
}
.shoppInfo view{
  padding-top:5rpx;
  padding-bottom:5rpx;
}
.orderitem image{
  width: 150rpx;
  height: 150rpx;
  
}
.shopbrand{
  font-size: 24rpx;
  color: #dddddd  
}
.shopMoney{
  font-size:24rpx;
  color: red 
}
.sub{
  width: auto;
  height: auto;
  display: flex;
  position: absolute;
  right: 0;
  bottom: 20rpx;
  border:1px solid #dddddd
}
.sub input{
  width: 70rpx;
  height: 30rpx;
  border-left: 1px solid #dddddd;
  border-right: 1px solid #dddddd;
  text-align: center
}
.count{
  width: 60rpx;
  height: 30rpx;
  text-align: center
}

/* 提交订单 */

.submit{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: red;
  display: flex;
  justify-content: left;
  align-items: center;
  border-top: 1px solid #dddddd;
  z-index: 2
}
.jiage{
  width:100%;
  height: 100rpx;
  background: white
}
.submit button{
  width: 60%;
  border: none;
  height: 100rpx;
  line-height: 100rpx
}
.jiageItem{
  padding-left:20rpx;
  font-size:30rpx;
  padding-top:10rpx   
}
.zongjia text{
  color: red;
  font-weight:900 
}